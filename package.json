{
  "name": "nestjs-gql-api",
  "version": "0.0.1",
  "description": "NestJS GraphQL API",
  "author": "Roman Karas",
  "license": "ISC",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "concurrently --handle-input \"wait-on dist/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "start:docker:all": "./start-containers.all.sh",
    "start:docker:db-pga": "./start-containers.db-pga.sh",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.11.1",
    "@nestjs/core": "^6.11.1",
    "@nestjs/graphql": "^6.5.3",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/passport": "^6.1.1",
    "@nestjs/platform-express": "^6.11.1",
    "apollo-server-express": "^2.9.16",
    "bcrypt": "^3.0.7",
    "graphql": "^14.6.0",
    "graphql-tools": "^4.0.6",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pg": "^7.17.1",
    "pg-hstore": "^2.3.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.4",
    "sequelize": "^5.21.3",
    "sequelize-typescript": "^1.1.0",
    "type-graphql": "^0.17.6"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.11.1",
    "@types/bcrypt": "^3.0.0",
    "@types/bluebird": "^3.5.29",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^24.9.1",
    "@types/node": "^13.5.0",
    "@types/passport-jwt": "^3.0.3",
    "@types/sequelize": "=4.27.23",
    "@types/supertest": "^2.0.8",
    "@types/validator": "^10.11.3",
    "concurrently": "^5.1.0",
    "dotenv": "^8.2.0",
    "graphql-tag-pluck": "^0.8.7",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "25.0.0",
    "ts-node": "8.6.2",
    "tsconfig-paths": "3.9.0",
    "tslint": "6.0.0",
    "typescript": "3.7.5",
    "wait-on": "^4.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
